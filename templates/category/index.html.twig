{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
           <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les series</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <p><a href="{{ path("category_new") }}">add new</a></p>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
